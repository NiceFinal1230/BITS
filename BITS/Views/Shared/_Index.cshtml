<script>
    function editIFrame(path, _input) {
        const iframe = document.createElement("iframe");
        iframe.src = path + _input;
        $('#iframe-container').append(iframe);

        $('#iframe-container').toggle();
        $('#right').toggle();
    }
    function closeIFrame() {
        $('#iframe-container').empty();
        $('#iframe-container').toggle();
        $('#right').toggle();
        location.reload();
    }
</script>