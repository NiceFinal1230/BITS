@model BITS.Models.Product

@{
    ViewData["Title"] = "Details";
}
<style>
    .carousel-item{
        height: 500px;
    }
    #carouselExampleIndicators {
        height: 500px;
    }

    .carousel-item img {
        height: 100%;
        position: absolute;
        left: 50%;
        transform: translate(-50%,0);
    }

    #checkout-thumbnail {
        display: flex;
        justify-content: center;
    }

    .buy-now,
    .add-to-cart{
        display: block;
        width: calc(100%);
        border-radius: 7px;
        border: none;
        padding: 10px;
        color: white;
        text-align: center;
    }

    .buy-now:hover,
    .add-to-cart:hover {
        text-decoration: unset;
        font-weight:unset;
        color: inherit;
    }

    .buy-now{
        background-color: #1277D9;
    }

    .add-to-cart {
        margin-top:12px;
        border: 1px solid white;
    }

    .right-details{
        margin-top: 12px;
    }

    .right-index{
        margin-top: 5px;
        color: #F5F5F5;
        font-weight: bold;
        opacity: 60%;
    }

    .right-value {
        font-weight: bold;
        color: white;
    }

    .product {
        margin-top: 24px;
    }

    .product-type{
        padding: 3px 12px;
        border-radius: 6px;
        background-color: #3E3E3E;
    }

    .product-sale{
        margin-top: 18px;
    }

    .share{
        text-align: center;
        border: 1px solid #4BC140;
        border-radius: 4px;
        padding: 0px;
    }

    .report {
        text-align: center;
        border: 1px solid #E03030;
        border-radius: 4px;
        padding: 0px;
    }
</style>
<div class="container">

    <div class="row  align-items-center">
        <div class="col-lg-8"> <h1>@Html.DisplayFor(model => model.Name)</h1> </div>
        <div class="col-lg-2 share">
            <i class="bi bi-share-fill"></i>
            Share
        </div>
        <div class="col-lg-2 report">
            <i class="bi bi-flag"></i>
            Report
        </div>
    </div>
    <h5><u>Overview</u></h5>
    <div class="row">
        <div class="col-lg-8">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                @{
                    int indicatorCount = 0;
                    foreach(var item in Model.PreviewImages)
                    {
                        if (indicatorCount == 0)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@indicatorCount" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@indicatorCount"></li>
                        }
                        indicatorCount++;
                    }
                }
                </ol>
                <div class="carousel-inner">
                @{
                    int count = 0;

                    foreach (var imageItem in Model.PreviewImages)
                    {
                        if (count == 0)
                        {
                            <div class="carousel-item active">
                                <img class="img-fluid" src="@imageItem" alt="@count">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="img-fluid" src="@imageItem" alt="@count">
                            </div>
                        }
                        count++;
                    }
                
                }
                </div>

                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
            </div>
            <p>@Html.DisplayFor(model => model.Description)</p>

            <div class="container">
                <div class="row">
                    <div class="col-sm">@Html.DisplayNameFor(model => model.Genres)</div>
                    <div class="col-sm">@Html.DisplayNameFor(model => model.Features)</div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        @for (int i = 0; i < Model.Genres.Count; i++)
                        {
                            string x = ", ";
                            if (i == Model.Genres.Count - 1)
                                x = " ";
                            @Model.Genres[i] @x
                            ;
                        }
                    </div>
                    <div class="col-sm">
                        @for (int i = 0; i < Model.Features.Count; i++)
                        {
                            string x = ", ";
                            if (i == Model.Features.Count - 1)
                                x = " ";
                            @Model.Features[i] @x
                            ;
                        }
                    </div>
                </div>
            </div>
            <p>System Requirements</p>
            <div class="container">
                <div class="row">
                    <div class="col-sm"></div>
                    <div class="col-sm"></div>
                </div>
                <div class="row">
                    <div class="col-sm"></div>
                    <div class="col-sm"></div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="right">
                <div id="checkout-thumbnail">
                    <img class="img-fluid" src="@Model.PreviewImages.Last()" id="checkout-thumbnail-image" />
                </div>
                <div class="d-flex justify-content-between align-items-center product">
                    <div class="product-type">Base Game</div>
                    <div class="product-price">SGD 79.90</div>
                </div>
                <p class="product-sale">Sale ends 6/13/2024 at 11:00 PM</p>
                <button type="button" class="buy-now">Buy Now</button>
                <a class="add-to-cart" asp-controller="Carts" asp-action="Create" asp-route-id="@Model?.ProductId">Add to Cart</a>
                
                <div class="right-details">
                    <div class="d-flex justify-content-between">
                        <div class="right-index">Refund Type</div>
                        <div class="right-value">Self-Refundable</div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="right-index">@Html.DisplayNameFor(model => model.Developer)</div>
                        <div class="right-value">@Html.DisplayFor(model => model.Developer)</div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="right-index">@Html.DisplayNameFor(model => model.Publisher)</div>
                        <div class="right-value">@Html.DisplayFor(model => model.Publisher)</div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="right-index">@Html.DisplayNameFor(model => model.ReleaseDate)</div>
                        <div class="right-value">@Html.DisplayFor(model => model.ReleaseDate)</div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>

</div>
