@model BITS.Models.Stocktake

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .edit {
        background-color: #222222;
        padding: 15px;
    }

    .row {
        margin: 0px;
    }

    label,
    p {
        margin: 0px;
        font-weight: bold;
    }

    input[type],
    textarea {
        color-scheme: dark;
        background-color: #161616;
        color: white;
        border: 1px solid #858585;
        transition: 0.5s;
        outline: none;
    }

        textarea:focus,
        input[type]:focus {
            background-color: #161616;
            color: white;
            border: 1px solid white;
        }

    textarea {
        width: 100%;
    }

    .minimum {
        opacity: 60%;
    }

    #delete-button {
        background-color: #E03030;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        color: white;
        border: none;
    }

    #cancel-button {
        background-color: #E08F30;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        color: white;
        border: none;
    }

    #save-button,
    #add-new-stock,
    #add-new-stock-expand {
        background-color: #2E7BEE;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        color: white;
        border: none;
    }

    .table td, .table th {
        padding: 0px;
        vertical-align: default;
        border-top: none;
    }

    .modal-content {
        background-color: #161616;
    }

    #header,
    #footer {
        display: none;
    }

</style>
<div class="edit container-fluid">
    <div class="row">
        <div class="col">
            <form asp-action="Edit" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row justify-content-between align-items-center">
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.ProductId">
                        <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                        </svg>
                    </a>
                    <div class="row justify-content-end">
                        <input type="submit" value="Save" id="add-new-stock" />
                    </div>
                </div>


                <input type="hidden" asp-for="StocktakeId" />
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="SourceId" class="control-label"></label>
                    <input asp-for="SourceId" class="form-control" />
                    <span asp-validation-for="SourceId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscountRate" class="control-label"></label>
                    <input asp-for="DiscountRate" class="form-control" />
                    <span asp-validation-for="DiscountRate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscountStartDate" class="control-label"></label>
                    <input asp-for="DiscountStartDate" class="form-control" />
                    <span asp-validation-for="DiscountStartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscountEndDate" class="control-label"></label>
                    <input asp-for="DiscountEndDate" class="form-control" />
                    <span asp-validation-for="DiscountEndDate" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>







